<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_salary_rule_form_hr_payroll" model="ir.ui.view">
        <field name="name">hr.salary.rule.view.form.inherit</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="//*[@name='amount_select']" position="after">
                <field name="is_salary" attrs="{'invisible':[('part_salary','in',('its','cn','igr'))]}" />
                <field name="part_salary" attrs="{'invisible':[('is_salary','=',True)]}" />

            </xpath>
        </field>
    </record>

</odoo>
