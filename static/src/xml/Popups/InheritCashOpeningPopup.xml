<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="InheritCashOpeningPopup" t-inherit="point_of_sale.CashOpeningPopup" t-inherit-mode="extension" owl="1">
            <xpath expr="//textarea[hasclass('opening-cash-notes')]" position="before">
                    <div class="opening-cash-section">
                        <t t-set="_currencyname" t-value="get_related_currency_name()"/>
                        <span class="info-title">Opening cash (<t t-esc="_currencyname" />)</span>
                        <div class="cash-input-sub-section" t-on-input="handleInputChange">
                            <input class="pos-input" type="number" t-model.number="state.openingCashCurrency"/>
                            <div class="button icon" t-on-click="openDetailsPopup">
                                <i class="fa fa-calculator" role="img" title="Open the money details popup"/>
                            </div>
                        </div>
                    </div>
            </xpath>
    </t>
</templates>